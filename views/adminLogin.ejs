<body>
<div class="loginBox"> <img class="user" src="https://i.ibb.co/yVGxFPR/2.png" height="100px" width="100px">
    <h3>Admin Login Here</h3>
    <% if (locals.errorMessage) { %>
        <h5 class="text-danger form-signin-heading2" ><%= errorMessage %></h5>
        <% } %>
        <% if (locals.logoutMessage) { %>
          <h5 class="text-sucess form-signin-heading2" ><%= logoutMessage %></h5>
          <% } %>
    <form action="login" method="post" name="Login_Form" onsubmit="return validateForm()">
        <div class="inputBox">
            <input type="text" id="email" value="admin@mail.com" class="form-control" name="email" placeholder="Email Address" required="" autofocus="" />
                <p id="emailError" style="color: red;"></p><br>
                
                <input type="password" value="Admin123" id="password" class="form-control" name="password" placeholder="Password" required=""/>
                <p id="passwordError"  style="color: red;"></p><br>
         </div> 
        <input type="submit" name="Submit" value="Login">
    </form> 
